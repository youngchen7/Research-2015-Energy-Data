{% block content %}
	<div class="starter-template">
		<h1>Village Lighting Data</h1>
		<script type="text/javascript">
				// Your beautiful D3 code will go here
				var dataset = [
												[5, 20], [480, 90], [250, 50], [100, 33], [330, 95],
												[410, 12], [475, 44], [25, 67], [85, 21], [220, 88]
											];

				var w = window.innerWidth;
				var h = window.innerHeight*0.6;

				var svg = d3.select("body")
					.append("svg")
					.attr("width", w)   // <-- Here
					.attr("height", h); // <-- and here!
				//Draw axises
				svg.append("line")
						.attr("x1", 2*w/15)
						.attr("x2", 2*w/15)
						.attr("y1", 0)
						.attr("y2", h);

				//Draw labels
				svg.append("text")
					.text("Pahari")
					.attr("x", w/15)
					.attr("y", h/4);
				svg.append("text")
					.text("Parjanpur")
					.attr("x", w/15)
					.attr("y", 2*h/4);
				svg.append("text")
					.text("Sakalpur")
					.attr("x", w/15)
					.attr("y", 3*h/4);

				var circles = svg.selectAll("circle")
								.data(dataset)
								.enter()
								.append("circle")
								.attr("cx", function(d) {
										return d[0];
								})
								.attr("cy", function(d) {
										return d[1];
								})
								.attr("r", 5);
				

		</script>
	</div>
{% endblock %}
